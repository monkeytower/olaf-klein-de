---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = "Olaf Klein", description = "Webseite von Olaf Klein" } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Google Fonts: Archivo -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  </head>
  <body class="bg-body text-secondary font-sans antialiased min-h-screen flex flex-col">
    <main class="flex-grow">
      <slot />
    </main>
    
    <footer class="py-8 text-center text-sm opacity-60">
      <p>&copy; {new Date().getFullYear()} Olaf Klein. All rights reserved.</p>
    </footer>
  </body>
</html>
