<form action="/api/send-mail" method="POST" class="space-y-3">
  {/* Security: Invisible Honeypot */}
  <div
    class="opacity-0 absolute top-0 left-0 h-0 w-0 -z-50 pointer-events-none"
    aria-hidden="true"
  >
    <label for="bot-field">Don't fill this out if you're human:</label>
    <input
      type="text"
      name="bot-field"
      id="bot-field"
      tabindex="-1"
      autocomplete="off"
    />
  </div>

  <div class="space-y-1">
    <label for="name" class="text-xs font-semibold opacity-60 ml-1">
      Full Name
    </label>
    <input
      type="text"
      name="name"
      id="name"
      required
      class="w-full bg-slate-50 dark:bg-white/5 border-2 border-[var(--border-color)] px-4 py-3 text-[var(--text-color)] rounded-xl focus:border-primary focus:bg-[var(--bg-color)] focus:outline-none transition-all duration-200"
      placeholder="e.g. John Doe"
    />
  </div>

  <div class="space-y-1">
    <label for="email" class="text-xs font-semibold opacity-60 ml-1">
      Email Address
    </label>
    <input
      type="email"
      name="email"
      id="email"
      required
      class="w-full bg-slate-50 dark:bg-white/5 border-2 border-[var(--border-color)] px-4 py-3 text-[var(--text-color)] rounded-xl focus:border-primary focus:bg-[var(--bg-color)] focus:outline-none transition-all duration-200"
      placeholder="john@example.com"
    />
  </div>

  <div class="space-y-1">
    <label for="message" class="text-xs font-semibold opacity-60 ml-1">
      Message
    </label>
    <textarea
      name="message"
      id="message"
      rows="3"
      required
      class="w-full bg-slate-50 dark:bg-white/5 border-2 border-[var(--border-color)] px-4 py-3 text-[var(--text-color)] rounded-xl focus:border-primary focus:bg-[var(--bg-color)] focus:outline-none transition-all duration-200 resize-none"
      placeholder="How can I help you?"></textarea>
  </div>

  {/* Security: Cloudflare Turnstile */}
  <script
    src="https://challenges.cloudflare.com/turnstile/v0/api.js"
    async
    defer></script>
  <div
    class="cf-turnstile py-2"
    data-sitekey={import.meta.env.PUBLIC_TURNSTILE_SITE_KEY}
  >
  </div>

  <button
    type="submit"
    class="w-full py-3 bg-slate-900 dark:bg-white dark:text-slate-900 text-white font-bold rounded-xl hover:brightness-110 hover:shadow-xl transition-all duration-300 active:scale-95 cursor-pointer"
  >
    Send Message
  </button>
</form>
