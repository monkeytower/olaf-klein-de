<form action="/api/send-mail" method="POST" class="max-w-md mx-auto space-y-8">
  {/* Security: Invisible Honeypot */}
  <div
    class="opacity-0 absolute top-0 left-0 h-0 w-0 -z-50 pointer-events-none"
    aria-hidden="true"
  >
    <label for="bot-field">Don't fill this out if you're human:</label>
    <input
      type="text"
      name="bot-field"
      id="bot-field"
      tabindex="-1"
      autocomplete="off"
    />
  </div>

  <div class="group relative">
    <input
      type="text"
      name="name"
      id="name"
      required
      placeholder=" "
      class="peer w-full border-b-2 border-secondary/20 bg-transparent py-3 text-secondary focus:border-primary focus:outline-none transition-colors duration-300"
    />
    <label
      for="name"
      class="absolute left-0 top-3 -translate-y-6 text-xs font-bold uppercase tracking-wider text-secondary/60 transition-all peer-placeholder-shown:translate-y-0 peer-placeholder-shown:text-base peer-placeholder-shown:text-secondary/40 peer-focus:-translate-y-6 peer-focus:text-xs peer-focus:text-primary"
    >
      Name
    </label>
  </div>

  <div class="group relative">
    <input
      type="email"
      name="email"
      id="email"
      required
      placeholder=" "
      class="peer w-full border-b-2 border-secondary/20 bg-transparent py-3 text-secondary focus:border-primary focus:outline-none transition-colors duration-300"
    />
    <label
      for="email"
      class="absolute left-0 top-3 -translate-y-6 text-xs font-bold uppercase tracking-wider text-secondary/60 transition-all peer-placeholder-shown:translate-y-0 peer-placeholder-shown:text-base peer-placeholder-shown:text-secondary/40 peer-focus:-translate-y-6 peer-focus:text-xs peer-focus:text-primary"
    >
      Email
    </label>
  </div>

  <div class="group relative">
    <textarea
      name="message"
      id="message"
      rows="4"
      required
      placeholder=" "
      class="peer w-full resize-none border-b-2 border-secondary/20 bg-transparent py-3 text-secondary focus:border-primary focus:outline-none transition-colors duration-300"
    ></textarea>
    <label
      for="message"
      class="absolute left-0 top-3 -translate-y-6 text-xs font-bold uppercase tracking-wider text-secondary/60 transition-all peer-placeholder-shown:translate-y-0 peer-placeholder-shown:text-base peer-placeholder-shown:text-secondary/40 peer-focus:-translate-y-6 peer-focus:text-xs peer-focus:text-primary"
    >
      Nachricht
    </label>
  </div>

  {/* Security: Cloudflare Turnstile */}
  <script
    src="https://challenges.cloudflare.com/turnstile/v0/api.js"
    async
    defer></script>
  <div
    class="cf-turnstile"
    data-sitekey={import.meta.env.PUBLIC_TURNSTILE_SITE_KEY}
  >
  </div>

  <button
    type="submit"
    class="w-full bg-primary py-4 text-white font-bold uppercase tracking-[0.2em] hover:bg-secondary hover:text-white transition-colors duration-300 cursor-pointer"
  >
    Senden
  </button>
</form>
