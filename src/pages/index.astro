---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ui/ContactForm.astro";
import { createReader } from "@keystatic/core/reader";
import config from "../../keystatic.config";

// Initialize Keystatic Reader
const reader = createReader(process.cwd(), config);

// Fetch Data
const [settings, home] = await Promise.all([
  reader.singletons.settings.read(),
  reader.singletons.home.read(),
]);

const siteTitle = settings?.siteTitle || "Olaf Klein";
const subheadline = home?.subheadline || "Caveman with an iPhone";
---

<BaseLayout title={siteTitle} description={subheadline}>
  <div class="relative overflow-hidden flex-grow flex flex-col justify-center">
    {/* Clean Background with very subtle texture */}
    <div
      class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] dark:bg-[radial-gradient(#ffffff11_1px,transparent_1px)] [background-size:16px_16px] opacity-[0.4] pointer-events-none"
    >
    </div>

    <div
      class="relative w-full max-w-7xl mx-auto px-8 sm:px-12 lg:px-20 py-12 flex-grow flex items-center"
    >
      <div class="w-full grid lg:grid-cols-2 gap-12 lg:gap-20 items-stretch">
        {/* Hero Section */}
        <div class="flex flex-col justify-between py-2 animate-reveal-up">
          <div class="space-y-0">
            <h1 class="text-4xl md:text-6xl tracking-tight leading-tight">
              <span
                class="font-light text-slate-400 dark:text-slate-500 block mb-3"
                data-t="contact-page">Contact page</span
              >
              <span class="font-bold block text-slate-900 dark:text-white"
                >Olaf Klein</span
              >
            </h1>
            <p
              class="text-xl md:text-2xl text-slate-400 dark:text-slate-500 font-medium tracking-tight mt-4"
            >
              {subheadline}
            </p>
            <div class="mt-4 space-y-2">
              <p class="text-sm font-bold opacity-60" data-t="projects">
                Projects:
              </p>
              <ul class="text-sm space-y-1 opacity-80">
                <li>
                  <a
                    href="https://www.monkeytower.net"
                    class="hover:text-primary transition-colors"
                    >www.monkeytower.net</a
                  >
                </li>
                <li>
                  <a
                    href="https://www.paranomad.de"
                    class="hover:text-primary transition-colors"
                    >www.paranomad.de</a
                  >
                </li>
                <li>
                  <a
                    href="https://www.HWK-Essen.de"
                    class="hover:text-primary transition-colors"
                    >www.HWK-Essen.de</a
                  >
                </li>
                <li>
                  <a
                    href="https://www.byteloader.com"
                    class="hover:text-primary transition-colors"
                    >www.byteloader.com</a
                  >
                </li>
                <li>
                  <a
                    href="https://github.com/monkeytower-internet-agency"
                    class="hover:text-primary transition-colors"
                    >github.com/monkeytower-internet-agency</a
                  >
                </li>
              </ul>
            </div>
          </div>

          {/* Buttons Section - Aligned to bottom */}
          <div class="space-y-2 mt-8 lg:mt-0">
            <div class="flex flex-col sm:flex-row gap-2">
              <a
                href="https://call.whatsapp.com/voice/8wDkPkV3sHyYe4AqIEx17I"
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 flex items-center justify-center gap-2 px-6 py-2 bg-[#25D366] text-white rounded-xl font-bold text-xs tracking-wider transition-all hover:brightness-110 hover:shadow-lg active:scale-95"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-phone"
                  ><path
                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                  ></path></svg
                >
                WhatsApp Call
              </a>
              <a
                href="https://wa.me/491772688999"
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 flex items-center justify-center gap-2 px-6 py-2 border-2 border-[var(--text-color)] text-[var(--text-color)] rounded-xl font-bold text-xs tracking-wider transition-all hover:bg-[var(--text-color)]/5 active:scale-95"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-message-square"
                  ><path
                    d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"
                  ></path></svg
                >
                <span data-t="message-label">Message</span>
              </a>
            </div>
            <a
              href="https://calendar.app.google/eCouhaU7e5kSjiPn6"
              target="_blank"
              rel="noopener noreferrer"
              class="w-full flex items-center justify-center gap-2 px-6 py-3 border-2 border-[var(--text-color)] text-[var(--text-color)] rounded-xl font-bold text-xs tracking-wider transition-all hover:bg-[var(--text-color)]/5 active:scale-95"
              data-t="get-support"
            >
              Get Support
            </a>
          </div>
        </div>

        {/* Form Section */}
        <div class="relative animate-reveal-in delay-200">
          <div
            class="bg-[var(--bg-color)] p-6 md:p-8 rounded-[2rem] border-4 border-[var(--text-color)] shadow-[12px_12px_0px_0px_var(--text-color)] dark:shadow-[12px_12px_0px_0px_rgba(255,255,255,0.1)] transition-all overflow-hidden"
          >
            <div class="space-y-2 mb-6">
              <h3
                class="text-xl font-bold tracking-tight"
                data-t="get-in-touch"
              >
                Get in touch
              </h3>
              <div class="h-1.5 w-16 bg-primary"></div>
            </div>
            <ContactForm />
          </div>

          {/* Decorative elements behind form */}
          <div
            class="absolute -top-6 -right-6 w-full h-full border-4 border-[var(--border-color)] rounded-[2.5rem] -z-10"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
