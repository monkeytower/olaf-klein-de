---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ui/ContactForm.astro";
import { createReader } from "@keystatic/core/reader";
import config from "../../keystatic.config";

// Initialize Keystatic Reader
const reader = createReader(process.cwd(), config);

// Fetch Data
const [settings, home] = await Promise.all([
  reader.singletons.settings.read(),
  reader.singletons.home.read(),
]);

const siteTitle = settings?.siteTitle || "Olaf Klein";
const subheadline = home?.subheadline || "Caveman with an iPhone";
---

<BaseLayout
  title={siteTitle}
  description={subheadline}
  socialLinks={settings?.socialLinks || []}
>
  <div class="relative overflow-hidden flex-grow flex flex-col justify-center">
    {/* Clean Background with very subtle texture */}
    <div
      class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] dark:bg-[radial-gradient(#ffffff11_1px,transparent_1px)] [background-size:16px_16px] opacity-[0.4] pointer-events-none"
    >
    </div>

    <div
      class="relative w-full max-w-7xl mx-auto flex-grow flex items-center overflow-hidden lg:px-20"
    >
      <div
        class="w-full flex lg:grid lg:grid-cols-2 gap-6 lg:gap-20 items-stretch overflow-x-auto snap-x snap-mandatory scroll-smooth no-scrollbar animate-scroll-hint pb-12 lg:pb-0 px-8 lg:px-0 scroll-pl-8"
      >
        {/* Hero Section */}
        <div
          class="flex-none w-[85vw] md:w-[70vw] lg:w-auto flex flex-col justify-between py-2 snap-start animate-reveal-up lg:snap-align-none"
        >
          <div class="space-y-0">
            <h1
              class="text-6xl md:text-8xl lg:text-7xl tracking-tighter leading-[0.9] lg:leading-tight"
            >
              <span
                class="font-light text-slate-400 dark:text-slate-500 block mb-4 text-4xl md:text-5xl lg:text-5xl"
                data-t="contact-page">Contact page</span
              >
              <span class="font-black block text-slate-900 dark:text-white"
                >Olaf Klein</span
              >
            </h1>
            <p
              class="text-2xl md:text-4xl lg:text-3xl text-slate-400 dark:text-slate-500 font-medium tracking-tight mt-8 lg:mt-6"
            >
              {subheadline}
            </p>
            <div class="mt-10 lg:mt-8 space-y-4">
              <p
                class="text-xs font-bold opacity-40 uppercase tracking-[0.2em]"
                data-t="projects"
              >
                Projects:
              </p>
              <ul
                class="text-lg md:text-2xl lg:text-lg space-y-3 lg:space-y-2 opacity-90 font-medium"
              >
                <li>
                  <a
                    href="https://www.monkeytower.net"
                    class="hover:text-primary transition-colors border-b-2 border-transparent hover:border-primary pb-1"
                    >www.monkeytower.net</a
                  >
                </li>
                <li>
                  <a
                    href="https://www.paranomad.de"
                    class="hover:text-primary transition-colors border-b-2 border-transparent hover:border-primary pb-1"
                    >www.paranomad.de</a
                  >
                </li>
                <li>
                  <a
                    href="https://www.HWK-Essen.de"
                    class="hover:text-primary transition-colors border-b-2 border-transparent hover:border-primary pb-1"
                    >www.HWK-Essen.de</a
                  >
                </li>
                <li>
                  <a
                    href="https://www.byteloader.com"
                    class="hover:text-primary transition-colors border-b-2 border-transparent hover:border-primary pb-1"
                    >www.byteloader.com</a
                  >
                </li>
                <li>
                  <a
                    href="https://github.com/monkeytower-internet-agency"
                    class="hover:text-primary transition-colors border-b-2 border-transparent hover:border-primary pb-1"
                    >github.com/monkeytower-internet-agency</a
                  >
                </li>
              </ul>
            </div>
          </div>

          {/* Buttons Section - Aligned to bottom */}
          <div class="space-y-4 mt-12 lg:mt-0">
            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href="https://call.whatsapp.com/voice/8wDkPkV3sHyYe4AqIEx17I"
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 flex items-center justify-center gap-3 px-8 py-4 bg-[#25D366] text-white rounded-[1.25rem] font-bold text-sm tracking-wide transition-all hover:brightness-110 hover:shadow-2xl active:scale-95 shadow-xl shadow-[#25D366]/30"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-phone"
                  ><path
                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                  ></path></svg
                >
                WhatsApp Call
              </a>
              <a
                href="https://wa.me/491772688999"
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 flex items-center justify-center gap-3 px-8 py-4 border-2 border-[var(--text-color)] text-[var(--text-color)] rounded-[1.25rem] font-bold text-sm tracking-wide transition-all hover:bg-[var(--text-color)]/5 active:scale-95"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-message-square"
                  ><path
                    d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"
                  ></path></svg
                >
                <span data-t="whatsapp-label">WhatsApp Chat</span>
              </a>
            </div>
            <a
              href="https://calendar.app.google/eCouhaU7e5kSjiPn6"
              target="_blank"
              rel="noopener noreferrer"
              class="w-full flex items-center justify-center gap-3 px-8 py-5 border-2 border-[var(--text-color)] text-[var(--text-color)] rounded-[1.25rem] font-bold text-sm tracking-wide transition-all hover:bg-[var(--text-color)]/5 active:scale-95"
              data-t="get-support"
            >
              Get Support
            </a>
          </div>
        </div>

        {/* Form Section */}
        <div
          class="flex-none w-[85vw] md:w-[70vw] lg:w-auto relative animate-reveal-in delay-200 snap-start lg:px-0 lg:snap-align-none mr-8 lg:mr-0"
        >
          <div
            class="bg-[var(--bg-color)] p-8 md:p-12 lg:p-10 rounded-[3rem] border-4 border-[var(--text-color)] shadow-[20px_20px_0px_0px_var(--text-color)] dark:shadow-[20px_20px_0px_0px_rgba(255,255,255,0.1)] transition-all overflow-hidden h-full"
          >
            <div class="space-y-4 mb-10">
              <h3
                class="text-3xl font-black tracking-tight"
                data-t="get-in-touch"
              >
                Get in touch
              </h3>
              <div class="h-2.5 w-24 bg-primary"></div>
            </div>
            <ContactForm />
          </div>

          {/* Decorative elements behind form */}
          <div
            class="absolute -top-6 -right-4 lg:-right-6 w-full h-full border-4 border-[var(--border-color)] rounded-[3.5rem] -z-10"
          >
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    /* Hide scrollbar for Chrome, Safari and Opera */
    .no-scrollbar::-webkit-scrollbar {
      display: none;
    }

    /* Hide scrollbar for IE, Edge and Firefox */
    .no-scrollbar {
      -ms-overflow-style: none; /* IE and Edge */
      scrollbar-width: none; /* Firefox */
    }

    @keyframes scroll-hint {
      0%,
      100% {
        transform: translateX(0);
      }
      20% {
        transform: translateX(-40px);
      }
      40% {
        transform: translateX(0);
      }
    }

    .animate-scroll-hint {
      animation: scroll-hint 1.5s ease-in-out 1.5s;
    }
  </style>
</BaseLayout>
