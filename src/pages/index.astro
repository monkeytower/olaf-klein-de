---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ui/ContactForm.astro';
import { createReader } from '@keystatic/core/reader';
import config from '../../keystatic.config';

// Initialize Keystatic Reader
const reader = createReader(process.cwd(), config);

// Fetch Data (with safe fallbacks)
const homeData = await reader.singletons.home.read();
const settings = await reader.singletons.settings.read();

const siteTitle = settings?.siteTitle || 'Olaf Klein';
const headline = homeData?.headline || 'Webseite von Olaf Klein';
const subheadline = homeData?.subheadline || 'Via WhatsApp bin ich oft am schnellsten zu erreichen.';
const tagline = homeData?.tagline || 'all we have is now';
---

<BaseLayout title={siteTitle} description={headline}>
  <div class="flex min-h-screen flex-col items-center justify-center px-6 py-12 md:px-12">
    
    <header class="mb-16 text-center">
      <h1 class="font-heading text-4xl font-black uppercase tracking-tight md:text-6xl text-primary mb-4">
        {headline}
      </h1>
      <p class="text-lg md:text-xl opacity-80 max-w-2xl mx-auto leading-relaxed">
        {subheadline}
      </p>
    </header>

    <div class="mb-16 grid gap-6 w-full max-w-md">
      <a 
        href="https://call.whatsapp.com/voice/8wDkPkV3sHyYe4AqIEx17I" 
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-3 border-2 border-primary bg-transparent py-4 font-bold uppercase tracking-widest text-primary transition-all duration-300 hover:bg-primary hover:text-white"
      >
        <span>WhatsApp Call</span>
      </a>
      <a 
        href="https://wa.me/491772688999" 
        target="_blank" 
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-3 border-2 border-secondary bg-transparent py-4 font-bold uppercase tracking-widest text-secondary transition-all duration-300 hover:bg-secondary hover:text-white"
      >
        <span>WhatsApp Chat</span>
      </a>
    </div>

    <section class="w-full max-w-xl text-center">
      <h6 class="mb-8 text-xs font-bold uppercase tracking-[0.4em] text-secondary/40">
        {tagline}
      </h6>
      
      <div class="bg-slate-50 p-8 md:p-12 shadow-sm border border-slate-100">
        <h3 class="mb-8 font-heading text-2xl font-bold uppercase text-secondary">Make Contact</h3>
        <ContactForm />
      </div>
    </section>

  </div>
</BaseLayout>
